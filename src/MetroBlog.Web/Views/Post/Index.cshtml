@model MetroBlog.Web.ViewModels.PostSummaryListViewModel
@{
    ViewBag.Title = "Latest posts";
}

@section jumbotron{
    <h2>Latest posts</h2>
    <p>Julien Corioland, Tech Lead Web &amp; Cloud @@InfiniteSquare, MVP ASP.NET / IIS</p>
}

@if (!Model.PostsList.Any())
{
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-info">
                <strong>Ooops !</strong>
                <p>There is no post in the database !</p>
            </div>
        </div>
    </div>
}
else
{
    foreach (var post in Model.PostsList)
    {
        @Html.DisplayFor(m => post)
    }

    @*if (Model.CanGoNext)
    {
        <div class="row">
            <div class="col-xs-12">
                @if (Model.ByTag)
                {
                    @Html.ActionLink("previous posts >", "tags", new { page = Model.CurrentPage + 1 }, new { @class = "btn btn-primary pull-right" })
                }
                else if (Model.BySearch)
                {
                    @Html.ActionLink("previous posts >", "SearchByPage", new { page = Model.CurrentPage + 1, searchTerms = Html.Encode(Model.SearchTerms) }, new { @class = "btn btn-primary pull-right" })
                }
                else
                {
                    @Html.ActionLink("previous posts >", "index", new { page = Model.CurrentPage + 1 }, new { @class = "btn btn-primary pull-right" })
                }
            </div>
        </div>
    }*@
}

@section scripts{
    <script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'juliencoriolandblog'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
    </script>
}
